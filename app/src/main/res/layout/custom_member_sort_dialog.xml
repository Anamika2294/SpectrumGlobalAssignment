<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SortBy"
        android:textSize="20sp"
       ></TextView>

    <RadioGroup
        android:id="@+id/radio_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/radio_name_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name-Ascending"
            />

        <RadioButton
            android:id="@+id/radio_name_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name-Descending" />

        <RadioButton
            android:id="@+id/radio_age_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age-Ascending"
            />

        <RadioButton
            android:id="@+id/radio_age_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age-Descending" />


    </RadioGroup>

    <Button
        android:id="@+id/btn_okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="5dp"/>

</LinearLayout>

